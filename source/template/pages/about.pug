                            .skill__title CSS3

                        .skill__item
                            svg(viewBox="0 0 32 32")
                                circle(r="16" cx="16" cy="16").circle
                                circle(r="16" cx="16" cy="16" stroke-dasharray="15 100").circle-diagrams
